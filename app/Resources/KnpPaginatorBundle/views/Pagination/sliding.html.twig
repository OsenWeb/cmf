{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined and current != first %}
        <li class="first">
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
        </li>
    {% else %}
        <li class="first disabled">
            <a href="javascript:void(0)">&lt;&lt;</a>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li class="previous">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
        </li>
    {% else %}
        <li class="previous disabled">
            <a href="javascript:void(0)">&lt;</a>
        </li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li class="page">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="current active">
                <a href="javascript:void(0)" class="disabled">{{ page }}</a>
            </li>
        {% endif %}
    {% endfor %}

    {% if next is defined %}
        <li class="next">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
        </li>
    {% else %}
        <li class="next disabled">
            <a href="javascript:void(0)">&gt;</a>
        </li>
    {% endif %}

    {% if last is defined and current != last %}
        <li class="last">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
        </li>
    {% else %}
        <li class="last disabled">
            <a href="javascript:void(0)">&gt;&gt;</a>
        </li>
    {% endif %}
</ul>
{% endif %}
