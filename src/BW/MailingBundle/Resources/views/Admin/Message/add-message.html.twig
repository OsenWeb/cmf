{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Создание нового сообщения {{ parent() }}{% endblock %}

{% block js %}
    {{ parent() }}
    <!-- CKEditor/CKFinder -->
    <script src="{{ asset('libs/ckeditor4/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('libs/ckfinder2/ckfinder.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            //alert('DOM');
            var editor = CKEDITOR.replace( 'message_text' );
            CKFinder.setupCKEditor( editor, '{{ asset('libs/ckfinder2/') }}' );
        });
    </script>
    <!-- /CKEditor/CKFinder -->
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-plus"></i> Создание сообщения</h1>
        </div>
    </div>
    {% include 'BWMailingBundle:Admin/Message:message.html.twig' %}
{% endblock %}