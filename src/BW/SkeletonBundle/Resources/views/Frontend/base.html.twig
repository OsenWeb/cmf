<!doctype html>
<html lang="{% block lang %}en{% endblock %}" ng-app="cmf">
    <head>
        {% block head %}
            <meta charset="{% block charset %}UTF-8{% endblock %}">            
            <title>{% block title %}% Base Template %{% endblock %}</title>
            <meta name="description" content="{% block description %}{% endblock %}"/>

            <meta name="viewport" content="width=device-width, initial-scale=1.0">

            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


            <!--[if lt IE 9]>
             <script>
              // html5 support in old ie
              var e = ("article,aside,figcaption,figure,footer,header,hgroup,nav,section,time").split(',');
              for (var i = 0; i < e.length; i++) {
                document.createElement(e[i]);
              }
             </script>
            <![endif]-->

            {% block css %}<!-- % CSS % -->{% endblock %}

            {% block js %}<!-- % JS % -->{% endblock %}
        {% endblock %}
    </head>
    <body class="body">
        {% block body %}
            <div class="wrap">
                <header>
                    {% block header %}
                        % Header Block %
                    {% endblock %}
                </header>

                <div class="content">
                    {% block pre_content %}
                        % Pre Content Block %
                    {% endblock %}

                    {% block flash_messages %}
                        {% for status, flashMessages in app.session.flashbag.all %}
                            {% for flashMessage in flashMessages %}
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="alert alert-dismissable alert-{{ status }} fade in">
                                                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                                {{ flashMessage|raw }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock %}

                    {% block content %}
                        % Content Block %
                    {% endblock %}

                    {% block post_content %}
                        % Post Content Block %
                    {% endblock %}
                </div>

                <footer>
                    {% block footer %}
                        % Footer Block %
                    {% endblock %}
                </footer>
            </div>
            
            <div id="overflow">
                {% block overflow %}
                    % Over Flow Block %
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>