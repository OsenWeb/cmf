{% extends "BWSkeletonBundle:Frontend:base.html.twig" %}

{% block lang %}ru{% endblock %}

{% block charset %}UTF-8{% endblock %}

{% block title %}% Layout Template %{% endblock %}

{% block description %}{% endblock %}

{% block css %}
    <!-- % CSS % -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link href="{{ asset('css/grid.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/alert.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/animation.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
{% endblock %}
    
{% block js %}
    <!-- % JS % -->
    
    <script src="{{ asset('libs/angular/angular.min.js') }}"></script>
    <script src="{{ asset('libs/angular/angular-animate.min.js') }}"></script>
    <script src="{{ asset('js/ng-app.js') }}" type="text/javascript"></script>
{% endblock %}

{% block header %}
    <div class="top-menu root row">
        <div class="col">

        </div>
        <div class="col-r">
            <div class="col">
                {{ service('bw_user.widget').signIn()|raw }}
            </div>

            <div class="langs col">
                {{ service('bw_localization.widget').langs()|raw }}
            </div>
        </div>
    </div>
    <div class="header root row">
        <div class="logo col">
            <a href="{{ path('home') }}">osen-cmf</a>
        </div>
        <div class="col-r">
            <div class="search">
                {{ service('bw_blog.widget').searchForm()|raw }}
                <!-- <form action="">
                    <input type="text" name="query">
                    <button type="submit">Найти</button>
                </form> -->
            </div>
        </div>
    </div>

    <div class="main-menu root">
        <div class="col-xs-1-1">
            {{ service('bw_menu.service.menu_widget').show('main_menu', 'BWMenuBundle:MenuWidget:multicolumn-unordered-list.html.twig')|raw }}
        </div>
    </div>
{% endblock %}

{% block pre_content %}
{% endblock %}

{% block content %}
{% endblock %}

{% block post_content %}
{% endblock %}

{% block footer %}
    <div class="line"></div>
    <div class="copyright">
        <div>Copyright &copy; 2008-{{ 'now'|date('Y') }}</div>
    </div>
{% endblock %}
    
{% block overflow %}
    <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
    <script type="text/javascript"> 
    if( window.jQuery ) {
        var myjQ = jQuery.noConflict(true);
    }
    </script>
    <script src="{{ asset('js/jq-script.js') }}" type="text/javascript"></script>
{% endblock %}