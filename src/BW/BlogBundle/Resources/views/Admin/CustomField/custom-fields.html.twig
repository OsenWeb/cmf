{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Список настраиваемых полей {{ parent() }}{% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_custom_field_add') }}" title="Добавить новое поле">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-puzzle-piece"></i> Список настраиваемых полей</h1>
        </div>
    </div>
    {% if customFields %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">
                            №
                        </th>
                        <th>Название</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for field in customFields %}
                    <tbody>
                        <tr>
                            <td class="ta_c">
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('admin_custom_field_edit', {'id': field.id}) }}" title="Редактировать запись">{{ field.name }}</a> 
                            </td>
                            <td class="ta_c">
                                <span title="ID записи в БД">{{ field.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}