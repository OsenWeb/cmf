{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Добавление новой статьи {{ parent() }}{% endblock %}

{% block js %}
    {{ parent() }}
    <!-- CKEditor/CKFinder -->
    <script src="{{ asset('libs/ckeditor4/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('libs/ckfinder2/ckfinder.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            //alert('DOM');
            var editorContent = CKEDITOR.replace( 'post_content' );
            CKFinder.setupCKEditor( editorContent, '{{ asset('libs/ckfinder2/') }}' );
            var editorShortDesc = CKEDITOR.replace( 'post_shortDescription' );
            CKFinder.setupCKEditor( editorShortDesc, '{{ asset('libs/ckfinder2/') }}' );
        });
    </script>
    <!-- /CKEditor/CKFinder -->
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-plus"></i> Создание статьи</h1>
        </div>
    </div>
    {% include 'BWBlogBundle:Admin/Post:post.html.twig' %}
{% endblock %}