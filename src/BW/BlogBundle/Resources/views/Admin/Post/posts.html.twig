{% extends 'BWMainBundle:Layout/Backend:layout.html.twig' %}

{% block title %}Список статей {{ parent() }}{% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_add_post') }}" title="Добавить новую запись">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <h1>Список статей</h1>
    {% if posts %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">№</th>
                        <th>Название</th>
                        <th style="width: 5%" class="ta_c">Статус</th>
                        <th style="width: 10%">Дата создания</th>
                        <th style="width: 10%">Дата изменения</th>
                        <th style="width: 5%" class="ta_c">Язык</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for post in posts %}
                    <tbody>
                        <tr>
                            <td class="ta_c">{{ loop.index }}</td>
                            <td>
                                <a href="{{ path('admin_edit_post', {'id': post.id}) }}" title="Редактировать статью">{{ post.heading }}</a> 
                            </td>
                            <td class="ta_c">
                                <a href="{{ path('admin_toogle_published_post', {'id': post.id}) }}">
                                    {% if post.published %}
                                        <i class="green icon-ok-sign" style="color: green;" title="Снять с публикации"></i>
                                    {% else %}
                                        <i class="red icon-minus-sign" style="color: red;" title="Опубликовать"></i>
                                    {% endif %}
                                </a>
                            </td>
                            <td>
                                {{ post.created|date('d/m/Y') }}
                            </td>
                            <td>
                                {{ post.updated|date('d/m/Y') }}
                            </td>
                            <td class="ta_c">
                                {% if post.lang %}
                                    <abbr title="{{ post.lang.name }}">{{ post.lang.sign }}</abbr>
                                {% else %}
                                    ~
                                {% endif %}
                            </td>
                            <td class="ta_c">
                                <span title="ID статьи в БД">{{ post.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}