{% extends 'BWMainBundle:Layout/Frontend:layout.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block description %}{{ category.metaDescription }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {{ service('bw.breadcrumbs').generateFromCategory(category)|raw }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                {#{ bw.block.menu('main_menu')|raw }#}3333333333333333333
            </div>
            <div class="col-lg-9">
                <div class="posts">
                    <h1>Категория: {{ category.heading }}</h1>
                    {% for post in category.posts %}
                        <div class="post">
                            <h2><a href="{{ path('bw_router_index', {'q': post.route.query}) }}">{{ post.heading }}</a></h2>
                            <div>{{ post.shortDescription }}</div>
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>
{% endblock %}