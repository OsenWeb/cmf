{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Список групп слайдеров {{ parent() }}{% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_slider_group_add') }}" title="Добавить новый элемент">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-picture"></i> Список групп слайдеров</h1>
        </div>
    </div>
    {% if groups %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">
                            №
                        </th>
                        <th>Название</th>
                        <th>Alias</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for group in groups %}
                    <tbody>
                        <tr>
                            <td class="ta_c">
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('admin_slider_group_edit', {'id': group.id}) }}" title="Редактировать элемент">{{ group.name }}</a>
                            </td>
                            <td>
                                {{ group.alias }}
                            </td>
                            <td class="ta_c">
                                <span title="ID элемента в БД">{{ group.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}