{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Список слайдеров {{ parent() }}{% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_slider_add') }}" title="Добавить новый элемент">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-file-text-alt"></i> Список слайдеров</h1>
        </div>
    </div>
    {% if sliders %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">
                            №
                        </th>
                        <th>Название</th>
                        <th>Alias</th>
                        <th style="width: 5%" class="ta_c">Язык</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for slider in sliders %}
                    <tbody>
                        <tr>
                            <td class="ta_c">
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('admin_slider_edit', {'id': slider.id}) }}" title="Редактировать элемент">{{ slider.name }}</a> 
                            </td>
                            <td>
                                {{ slider.alias }}
                            </td>
                            <td class="ta_c">
                                {#% if post.lang %}
                                    <abbr title="{{ post.lang.name }}">{{ post.lang.sign }}</abbr>
                                {% else %}
                                    ~
                                {% endif %#}
                            </td>
                            <td class="ta_c">
                                <span title="ID элемента в БД">{{ slider.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}