{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Главная страница сайта{% endblock %}

{% block pre_content %}
    <div class="main-slider">
        {{ service('bw_slider.widget').create('slider-1')|raw }}
    </div>
{% endblock %}

{% block content %}
    <div class="content home-block root row">
        <div class="col-s-1-3">                
            {{ service('bw_blog.widget').listCategories()|raw }}
            {{ service('bw_blog.widget').lastPosts()|raw }}
        </div>
        <div class="col-s-2-3">
            <div class="page-content">
                {% if post %}
                    <h1>{{ post.heading }}</h1>
                    <div>
                        {{ post.content|raw }}
                    </div>
                {% else %}
                    <p>Вы не выбрали статью для отображения на главной странице.</p>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="new-products home-block root">
        <div class="col-xs-1-1">
            {{ service('bw_shop.service.recent_product_widget').show(20)|raw }}
        </div>
    </div>
{% endblock %}

{% block overflow %}
    {{ parent() }}
    <script src="{{ asset('libs/jquery/js/jquery.cycle2.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('libs/jquery/js/jquery.jcarousel-core.min.js') }}" type="text/javascript"></script>
{% endblock %}