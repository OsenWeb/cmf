{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Главная страница сайта{% endblock %}

{% block pre_content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="slider">
                    <img src="{{ asset('images/main_image.png') }}" alt="" width="100%">
				</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {{ service('bw_blog.widget').listCategories()|raw }}
                {{ service('bw_blog.widget').lastPosts()|raw }}
            </div>
            <div class="col-lg-9">
                {% if post %}
                    <h1>{{ post.heading }}</h1>
                    <div>
                        {{ post.content|raw }}
                    </div>
                {% else %}
                    <p>Вы не выбрали статью для отображения на главной странице.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}