{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}{{ entity.title ? entity.title : entity.heading }}{% endblock %}

{% block metaDescription %}{{ entity.metaDescription ? entity.metaDescription : entity.heading }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {{ service('bw_blog.widget').lastPosts()|raw }}
            </div>
            <div class="col-lg-9">
                <h1>{{ entity.heading }}</h1>
                <div>{{ entity.description|raw }}</div>
                <div class="products">
                    {% for product in entity.products %}
                        <div class="product">
                            <h2><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.heading }}</a></h2>
                            <div>{{ product.shortDescription|raw }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}