{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Список всех производителей {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {{ service('bw_blog.widget').lastPosts()|raw }}
                {{ form(form) }}
            </div>
            <div class="col-lg-9">
                <h1>Все производители</h1>
                <div class="vendors">
                    {% for entity in entities %}
                        {% include 'BWShopBundle:Vendor:row.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}