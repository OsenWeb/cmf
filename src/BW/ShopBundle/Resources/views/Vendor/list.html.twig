{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Список всех производителей {{ parent() }}{% endblock %}

{% block content %}
    <div class="breadcrumbs root">
        <div class="col-xs-1-1">
            <a href="{{ path('home') }}">Главная</a>
            <span class="separator">&gt;</span>
            <span>Все производители</span>
        </div>
    </div>

    <div class="product-category-page root row">
        <div class="product-filter col">
            {% include 'BWShopBundle:Filter:form.html.twig' %}
        </div>
        <div class="product-vendor-list items-list page-content row">
            <div class="col">
                <h1>Все производители</h1>
                <div class="vendors-list row level-row">
                    {% for entity in entities %}
                        {% include 'BWShopBundle:Vendor:row-block.html.twig' %}

                        {% if loop.index % 4 == 0 %}
                            <div class="clear visible-xs visible-s visible-m visible-l"></div>
                        {% endif %}

                        {% if loop.index % 5 == 0 %}
                            <div class="clear visible-xl"></div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}