{{ form_start(form) }}
    <div class="form-buttons">
        {{ form.create is defined ? form_widget(form.create) }}
        {{ form.createAndClose is defined ? form_widget(form.createAndClose) }}
        {{ form.update is defined ? form_widget(form.update) }}
        {{ form.updateAndClose is defined ? form_widget(form.updateAndClose) }}
        {{ form.delete is defined ? form_widget(form.delete) }}
        {% include '@BWMain/Utility/Form/close-button.html.twig' with {'path': path('vendor')} %}
    </div>

    <div style="padding-bottom: 10px;">
        {{ form_row(form.heading) }}
    </div>

    <div style="padding-bottom: 10px;">
        {{ form_row(form.description) }}
    </div>

    <h2>Meta теги:</h2>

    <div style="padding-bottom: 10px;">
        {{ form_row(form.slug) }}
    </div>

    <div style="padding-bottom: 10px;">
        {{ form_row(form.title) }}
    </div>

    <div style="padding-bottom: 10px;">
        {{ form_row(form.metaDescription) }}
    </div>

    <h2>Изображение:</h2>

    <div style="padding-bottom: 10px;">
        {% if entity.image %}
            <img src="{{ asset(entity.image.webPath)|crop(200, 200) }}" alt="{{ entity.image.alt }}" title="{{ entity.image.title }}" />
        {% endif %}
        {{ form_row(form.image) }}
    </div>

{{ form_end(form) }}
