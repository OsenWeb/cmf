{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block js %}
    {{ parent() }}
    <!-- CKEditor/CKFinder -->
    <script src="{{ asset('libs/ckeditor4/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('libs/ckfinder2/ckfinder.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            //alert('DOM');
            var editorDescription = CKEDITOR.replace( 'bw_product_description' );
            CKFinder.setupCKEditor( editorDescription, '{{ asset('libs/ckfinder2/') }}' );
            var editorShortDescription = CKEDITOR.replace( 'bw_product_shortDescription' );
            CKFinder.setupCKEditor( editorShortDescription, '{{ asset('libs/ckfinder2/') }}' );
        });
    </script>
    <!-- /CKEditor/CKFinder -->
{% endblock %}

{% block content -%}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon-edit"></i> Редактирование товара</h1>
        </div>
    </div>

    <div class="bw_container">
        <div class="bw_row">
            {% include 'BWShopBundle:Product:form.html.twig' %}
        </div>
    </div>

{% endblock %}
