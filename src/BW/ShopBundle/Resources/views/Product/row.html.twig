<div class="product-item col-xs-1-3 col-l-1-4 col-xl-1-5">
    
    {% if entity.productImages.count %}
        {#<a href="{{ path('product_show_by_slug', {'slug': entity.slug}) }}">#}
        <a href="{{ app.request.uriForPath(entity.route.path) }}" class="product-preview">
            <img src="{{ asset(entity.productImages.first.image.webPath)|imagine_filter('middle_thumb') }}"
                 alt="{{ entity.productImages.first.image.alt }}"
                 title="{{ entity.productImages.first.image.title }}"
            />
        </a>
    {% endif %}

    <div class="product-name">
        {#<a href="{{ path('product_show_by_slug', {'slug': entity.slug}) }}">{{ entity.heading }}</a>#}
        <a href="{{ app.request.uriForPath(entity.route.path) }}">{{ entity.heading }}</a>
    </div>
    {% if entity.category %}
        <div class="category">
            {#Категория: <a href="{{ path('category_show_by_slug', {'slug': entity.category.slug}) }}">#}
            Категория: <a href="{{ app.request.uriForPath(entity.category.route.path) }}">
                {{ entity.category.heading }}
            </a>
        </div>
    {% endif %}
    {% if entity.vendor %}
        <div class="vendor">
            Производитель: <a href="{{ path('vendor_show_by_slug', {'slug': entity.vendor.slug}) }}">
                {{ entity.vendor.heading }}
            </a>
            {% if entity.vendor.image %}
                <div class="vendor_image">
                    <a href="{{ path('vendor_show_by_slug', {'slug': entity.vendor.slug}) }}">
                        <img src="{{ asset(entity.vendor.image.webPath)|imagine_filter('small_thumb') }}"
                             alt="{{ entity.vendor.image.alt }}"
                             title="{{ entity.vendor.image.title }}"
                        />
                    </a>
                </div>
            {% endif %}
        </div>
    {% endif %}

    {% if entity.productFields.count %}
        <div class="fields">
            {% for productField in entity.productFields %}
                <div class="field">
                    <strong>{{ productField.field.name }}:</strong>
                    {% for property in productField.properties %}
                        {{ property.name ~ (not loop.last ? ',' : '') }}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="sku">
        Артикул: {{ entity.sku }}
    </div>

    <div class="short_description">
        Краткое описание: {{ entity.shortDescription|raw }}
    </div>
    
    <div class="price">
        {{ entity.price }} <span class="currency">грн.</span>
    </div>

    <div class="add-to-cart">
        <form action="">
            <button type="submit" class="add-to-cart-button">Купить</button>
        </form>
    </div>
</div>