{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Пополнение личного кошелька{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i class="fa fa-user"></i> Пополнение личного кошелька</h1>
                {% include 'BWUserBundle:Profile:menu.html.twig' %}
                <br>
                {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    <div>
                        {{ form_label(form.additiveAmount, 'Сумма пополнения: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.additiveAmount, {'attr': {'class': 'form-control '} }) }} грн.
                        {{ form_errors(form.additiveAmount) }}
                    </div>
                
                    <div>
                        {{ form_label(form.currency, 'Валюта кошелька: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.currency, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.currency) }}
                    </div>
                
                    <div>
                        {{ form_label(form.receipt.file, 'Квитанция: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.receipt.file, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.receipt.file) }}
                    </div>
                
                    <div>
                        {{ form_widget(form.replenish, {'attr': {'class': 'btn btn-primary icon-save before-padding', 'title': 'Сохранить и остаться в режиме редактирования'}, 'label': 'Пополнить'}) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}