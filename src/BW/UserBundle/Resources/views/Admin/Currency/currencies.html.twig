{% extends 'BWSkeletonBundle:Backend:layout.html.twig' %}

{% block title %}Список валют {% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_currency_add') }}" title="Добавить новую запись">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon icon-money"></i> Список валют</h1>
        </div>
    </div>
    {% if currencies %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">№</th>
                        <th>Название</th>
                        <th>Сокращение</th>
                        <th>Обозначение</th>
                        <th>Код буквенный</th>
                        <th>Код числовой</th>
                        <th style="width: 10%">Курс</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for currency in currencies %}
                    <tbody>
                        <tr>
                            <td class="ta_c">{{ loop.index }}</td>
                            <td>
                                <a href="{{ path('admin_currency_edit', {'id': currency.id}) }}" title="Редактировать элемент">{{ currency.name }}</a> 
                            </td>
                            <td>
                                {{ currency.abbr }}
                            </td>
                            <td>
                                {{ currency.symbol }}
                            </td>
                            <td>
                                {{ currency.alpha3 }}
                            </td>
                            <td>
                                {{ currency.numericCode }}
                            </td>
                            <td>
                                {{ currency.exchangeRate }}
                            </td>
                            <td class="ta_c">
                                <span title="ID элемента в БД">{{ currency.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}