{% extends 'BWMainBundle:Layout/Backend:layout.html.twig' %}

{% block title %}Список ролей пользователей {% endblock %}

{% block pre_content %}
    <div class="form-buttons">
        <a class="btn btn-primary icon-plus before-padding" href="{{ path('admin_role_add') }}" title="Добавить новую запись">Создать</a>
    </div>
{% endblock %}

{% block content %}
    <div class="bw_container">
        <div class="bw_row">
            <h1><i class="icon icon-group"></i> Список ролей пользователей</h1>
            <div><em>Иерархия ролей настраивается в файле <strong>app/config/security.yml</strong></em></div>
        </div>
    </div>
    {% if roles %}
        <div class="main-table">   
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 5%" class="ta_c">№</th>
                        <th>Роль</th>
                        <th>Alias</th>
                        <th style="width: 5%" class="ta_c">ID</th>
                    </tr>
                </thead> 
                {% for role in roles %}
                    <tbody>
                        <tr>
                            <td class="ta_c">{{ loop.index }}</td>
                            <td>
                                <a href="{{ path('admin_role_edit', {'id': role.id}) }}">{{ role.name}}</a>
                            </td>
                            <td>
                                {{ role.role }}
                            </td>
                            <td class="ta_c">
                                <span title="ID роли в БД">{{ role.id }}</span>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    {% else %}
        <div class="ta_c">Записи отсутствуют</div>
    {% endif %}
{% endblock %}