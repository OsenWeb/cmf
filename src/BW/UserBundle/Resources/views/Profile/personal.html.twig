{% extends 'BWSkeletonBundle:Frontend:layout.html.twig' %}

{% block title %}Личные данные{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i class="fa fa-user"></i> Кабинет пользователя - Личные данные</h1>
                {% include 'BWUserBundle:Profile:menu.html.twig' %}
                <br>
                {{ form_start(form) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    <div>
                        {{ form_label(form.surname, 'Фамилия: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.surname) }}
                    </div>

                    <div>
                        {{ form_label(form.name, 'Имя: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div>
                        {{ form_label(form.patronymic, 'Отчество: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.patronymic, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.patronymic) }}
                    </div>
                
                    <div>
                        {{ form_label(form.phone, 'Телефон: ', {'label_attr': {'class': ''} }) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control '} }) }}
                        {{ form_errors(form.phone) }}
                    </div>
                    <div>
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary icon-save before-padding'}, 'label': 'Сохранить'}) }}
                    </div>
                    <br>
                    <div>
                        <div>
                            {{ form_label(form.user.password, 'Изменение пароля (не обязательно): ', {'label_attr': {'class': ''} }) }}
                        </div>
                        <div>
                            {{ form_label(form.user.password.first, 'Новый пароль: ', {'label_attr': {'class': ''} }) }}
                            {{ form_widget(form.user.password.first, {'attr': {'class': 'form-control '} }) }}
                        </div>
                        <div>
                            {{ form_label(form.user.password.second, 'Подтверждение пароля: ', {'label_attr': {'class': ''} }) }}
                            {{ form_widget(form.user.password.second, {'attr': {'class': 'form-control '} }) }}
                        </div>
                        {% if form_errors(form.user.password.first) or form_errors(form.user.password.second) %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.user.password.first) }}
                                {{ form_errors(form.user.password.second) }}
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        {{ form_widget(form.user.changePassword, {'attr': {'class': 'btn btn-primary icon-save before-padding'}, 'label': 'Изменить пароль'}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}